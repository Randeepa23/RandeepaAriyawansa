# Environment Variables for Portfolio Backend

# Application
PROJECT_NAME="Portfolio API"
VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=True

# API
API_V1_STR="/api/v1"

# CORS - Update with your frontend URLs
ALLOWED_ORIGINS="http://localhost:4200,http://localhost:3000,http://127.0.0.1:4200"

# Email Configuration (Gmail example)
# Get app password from: https://myaccount.google.com/apppasswords
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your.email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="your.email@gmail.com"
EMAIL_TO="your.email@gmail.com"

# Security
SECRET_KEY="change-this-to-a-random-secret-key-in-production"
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Database (optional for future)
DATABASE_URL="sqlite:///./portfolio.db"
